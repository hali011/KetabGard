<div class="row">
    <input hidden id="datathisweek" value="@ViewBag.thisweak" />
    <input hidden id="dataprweek" value="@ViewBag.prweak" />
     <div class="col-10 p-5">
         <div class="row m-3 ms-0 me-0 rounded-3 ps-0 pe-0 border border-2 border-secondary">
             <div class="col-1 m-0 p-2 pe-3 text-end"> 
                 <img src="~/Source/Searchicon.png" />
             </div>
             <input id="searchbox" class="col-10 rounded-2 me0 pe-0" placeholder="جستجو کنید" style="border:0" />
         </div>
         <div>
             <div>
                 <div>
                     <label><b style="opacity:0.54">میانگین ثبت نام این ماه</b></label>
                 </div>
                 <div>
                     <label><b>@ViewBag.avrage</b></label>
                 </div>
             </div>
             <div class="row">
                 <div class="col-9">
                     <canvas id="myChart" height="100"></canvas>
                 </div>
                 <div class="col-1"></div>
                 <div class="col-2">
                     <div class="mt-3 p-2 rounded-3 text-center" style="background-color:rgba(61,59,64,0.1)">
                         <label style="font-size:12px;">اعضای کل</label>
                         <label><b>@ViewBag.userscount</b></label>
                     </div>
                     <div class="mt-4 p-2 rounded-3 text-center" style="background-color:rgba(61,59,64,0.1)">
                         <label style="font-size:12px;">کل امانتیا</label>
                         <label><b>@ViewBag.amanatcount</b></label>
                     </div>
                     <div class="mt-4 p-2 rounded-3 text-center" style="background-color:rgba(61,59,64,0.1)">
                         <label style="font-size:12px; color:rgba(255,69,69,0.88)">امانتی آورده نشده</label>
                         <label style="color: rgba(255,69,69,0.88)"><b>@ViewBag.amanatnotbackcount</b></label>
                     </div>
                 </div>
             </div>
         </div>
         <div class="row">
             <div class="col-2">
                 <label class="h6"><b>فعال ترین کاربران</b></label>
             </div>
             <div class="col-8"></div>
             <div class="col-2">
                 <select class="dropdown form-check border-0" style="background-color:rgba(249,249,249,1)">
                     <option>این هفته</option>
                 </select>
             </div>
         </div>
         <div id="dashboardtable">
             
         </div>
     </div>
     <div class="col-2 ps-0">
         <div class="p-5 ps-0">
             <div class="m-3 mt-4 ms-0 me-0 ps-0 pe-0">
                 <label id="nowdate"></label>
             </div>
         </div>
         <div class="rounded-4" style="background-color:rgba(255,69,69,0.18);">
             <div class="p-3 pt-2">
                 <label class="h6" style="color:#EF4040"><b>گذارش سایت</b></label>
             </div>
             <div class="p-2 text-center">
                 <div class="mb-3">
                     <label class="h6">&#x2022; <u style="font-size:0.7rem">سایت آپدیت شد برای دیدن موارد آپدیت شده کلیک کنید</u></label>
                 </div>
                 <div class="mb-3">
                     <label class="h6">&#x2022; <u style="font-size:0.7rem">باگ های گذارش شده درست شدند</u></label>
                 </div>
             </div>
         </div>
     </div>
</div>
<script>
    datathisweak = $("#datathisweek").val().split(" ");
    datapervuisweak = $("#dataprweek").val().split(" ");
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['1', '2', '3', '4', '5', '6', '7'],
            datasets: [
                {
                    label: 'این هفته',
                    data: [Number(datathisweak[0]), Number(datathisweak[1]), Number(datathisweak[2]), Number(datathisweak[3]), Number(datathisweak[4]), Number(datathisweak[5]), Number(datathisweak[6])],
                    backgroundColor: 'rgba(249, 65, 68, 0.2)',
                    borderColor: 'rgba(249, 65, 68, 1)',
                    borderWidth: 1,
                    fill: true
                },
                {
                    label: 'هفته قبل',
                    data: [Number(datapervuisweak[0]), Number(datapervuisweak[1]), Number(datapervuisweak[2]), Number(datapervuisweak[3]), Number(datapervuisweak[4]), Number(datapervuisweak[5]), Number(datapervuisweak[6])],
                    backgroundColor: 'rgba(249, 199, 79, 0.2)',
                    borderColor: 'rgba(249, 199, 79, 1)',
                    borderWidth: 1,
                    fill: true
                }
            ]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>