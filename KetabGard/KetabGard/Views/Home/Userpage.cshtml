<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<div class="row">
    <input id="mansdarsad" value="@ViewBag.man" hidden />
    <input id="womansdarsad" value="@ViewBag.woman" hidden/>
    <div class="col-10 p-5">
        <div class="row m-3 ms-0 me-0 rounded-3 ps-0 pe-0 border border-2 border-secondary">
            <div class="col-1 m-0 p-2 pe-3 text-end">
                <img src="~/Source/Searchicon.png" />
            </div>
            <input id="searchbox" class="col-10 rounded-2 me0 pe-0" placeholder="جستجو کنید" style="border:0" />
        </div>
        <div class="row mt-5">
            <div class="col-2">
                <label class="h5"><b>اعضا</b></label>
            </div>
            <div class="col-8"></div>
            <div class="col-2">
                <img class="cursor" src="~/Source/AddUser.png" onclick="Adduserloadpage()" />
            </div>
        </div>
        <div class="mb-3 me-2">
            <button type="button" id="alluser" onclick="selectedtypeofusers($('#alluser'),1)" class="btn disabled button-36 rounded-0">همه</button>
            <button type="button" id="activeuser" onclick="selectedtypeofusers($('#activeuser'),2)" class="btn rounded-0 button-35">اعضای فعال</button>
            <button type="button" id="deactiveuser" onclick="selectedtypeofusers($('#deactiveuser'),3)" class="btn rounded-0 button-35">اعضای غیرفعال</button>
        </div>
        <div id="divusertable">
            
        </div>
    </div>
    <div class="col-2 ps-0">
        <div class="p-5 ps-0">
            <div class="m-3 mt-4 ms-0 me-0 ps-0 pe-0">
                <label id="nowdate"></label>
            </div>
        </div>
        <div class="rounded-4" style="background-color:rgba(30,30,30,0.1); height:auto">
            <div class="p-3 pb-0 pt-2">
                <label class="h6" style="color:black"><b>جنسیت</b></label>
            </div>
            <div class="p-2 text-center">
                @*<img class="w-75" src="~/Source/Sex.png" />*@
                <canvas id="myPieChart" width="91" height="91"></canvas>
            </div>
            <div class="pe-2">
                <label class="ms-3">مرد <b style="color: #757DEB; font-size: 2rem; ">&#x2022;</b></label>
                <label>زن <b style="color: #F47072; font-size:2rem;">&#x2022;</b></label>
            </div>
        </div>
    </div>
</div>
<script>
    // Get the values from the hidden inputs
    var mans = document.getElementById('mansdarsad').value;
    var womans = document.getElementById('womansdarsad').value;

    // Get the context of the canvas
    var ctx = document.getElementById('myPieChart').getContext('2d');

    // Create the pie chart
    var myPieChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: [mans + '%', womans + '%'],
            datasets: [{
                data: [Number(mans), Number(womans)],
                backgroundColor: ['#4A90E2', '#F95F62'],
                hoverBackgroundColor: ['#357ABD', '#FF7374']
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display : false,
                },
                tooltip: {
                    callbacks: {
                        label: function (tooltipItem) {
                            return tooltipItem.label;
                        }
                    }
                }
            }
        }
    });
</script>